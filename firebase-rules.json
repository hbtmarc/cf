{
  "rules": {
    "users": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "transactions": {
      ".indexOn": ["userId", "date", "type", "status", "cardId", "groupId"],
      ".read": "auth != null",
      "$transactionId": {
        ".write": "auth != null && ((!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid))",
        ".validate": "newData.hasChildren(['userId', 'value', 'type', 'description', 'category', 'date', 'status', 'createdAt']) || !newData.exists()",
        "userId": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "value": {
          ".validate": "newData.isNumber() && newData.val() > 0"
        },
        "type": {
          ".validate": "newData.isString() && (newData.val() === 'receita' || newData.val() === 'despesa')"
        },
        "description": {
          ".validate": "newData.isString() && newData.val().length > 0 && newData.val().length <= 200"
        },
        "category": {
          ".validate": "newData.isString()"
        },
        "date": {
          ".validate": "newData.isNumber()"
        },
        "status": {
          ".validate": "newData.isString() && (newData.val() === 'confirmada' || newData.val() === 'pendente')"
        },
        "createdAt": {
          ".validate": "newData.isNumber()"
        },
        "paymentMethod": {
          ".validate": "newData.isString() && (newData.val() === 'cash' || newData.val() === 'credit')"
        },
        "cardId": {
          ".validate": "newData.isString()"
        },
        "purchaseDate": {
          ".validate": "newData.isNumber()"
        },
        "groupId": {
          ".validate": "newData.isString()"
        },
        "installment": {
          "current": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          },
          "total": {
            ".validate": "newData.isNumber() && newData.val() > 0"
          }
        }
      }
    },
    "categories": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "budgets": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "cards": {
      ".indexOn": ["userId"],
      ".read": "auth != null",
      "$cardId": {
        ".write": "auth != null && ((!data.exists() && newData.child('userId').val() === auth.uid) || (data.exists() && data.child('userId').val() === auth.uid))",
        ".validate": "newData.hasChildren(['userId', 'name', 'limit', 'closingDay', 'dueDay', 'color', 'brand']) || !newData.exists()",
        "userId": {
          ".validate": "newData.isString() && newData.val() === auth.uid"
        },
        "name": {
          ".validate": "newData.isString() && newData.val().length > 0"
        },
        "limit": {
          ".validate": "newData.isNumber() && newData.val() > 0"
        },
        "closingDay": {
          ".validate": "newData.isNumber() && newData.val() >= 1 && newData.val() <= 31"
        },
        "dueDay": {
          ".validate": "newData.isNumber() && newData.val() >= 1 && newData.val() <= 31"
        },
        "color": {
          ".validate": "newData.isString()"
        },
        "brand": {
          ".validate": "newData.isString()"
        }
      }
    }
  }
}
